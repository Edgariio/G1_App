<HomeScreen>:
    name: 'home'
    BoxLayout:
        canvas.before:
            #Color:
                #rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/city.jpg"
        orientation: "vertical"
        Label:
            text: "Welcome to the G1 App!"
            font_name: "fonts/Lcd.ttf"
            font_size: "60dp"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            color: 1, .5, 0, 1
        Label:
            text: "Practice Tests:"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: "20dp"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Practice Test 1"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test1Intro'
            Button:
                text: "Practice Test 2"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test2Intro'
            Button:
                text: "Practice Test 3"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test3Intro'
        Label:
            text: "Resources:"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: "20dp"
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "MTO Driver's Handbook"
                on_release:
                    import webbrowser
                    webbrowser.open('https://www.ontario.ca/document/official-mto-drivers-handbook')
            Button:
                text: "Find the nearest DriveTest Centre"
                on_release:
                    import webbrowser
                    webbrowser.open('https://drivetest.ca/find-a-drive-test-centre/find_a_drivetest_centre.html#!/locations')
<Test1Intro>:
    name: 'Test1Intro'
    BoxLayout:
        canvas.before:
            Color:
                rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Practice Test 1'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '40dp'
        Label:
            text: '40 Questions'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '30dp'
        Label:
            text: 'Must get 32/40 to pass'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Home'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'
            Button:
                text: 'Begin'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test1Q1'
<Test1Q1>:
    name: 'Test1Q1'
    BoxLayout:
        spacing: '20dp'
        canvas.before:
            Color:
                rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Question 1'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '40dp'
        Label:
            text: 'What does the following sign mean?'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '30dp'
        Image:
            source: 'images/yield.jpg'
            allow_stretch: True
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Stop and enter traffic slowly.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Button:
                text: 'Slow down, stop if necessary and yield the right-of-way.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (0,1,0,1)
                    root.on_correct_click()
                disabled: root.button_disabled
            Button:
                text: 'Stop and enter traffic quickly.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Button:
                text: 'Speed up and force your way into traffic.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Label:
                text: root.my_text
                text_size: self.size
                halign: 'center'
                valign: 'middle'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Quit'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'
                Button:
                    text: 'Next'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'Test1Q2'
